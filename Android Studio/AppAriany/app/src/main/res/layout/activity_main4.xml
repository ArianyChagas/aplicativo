<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity4"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#113716">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="216dp"
        android:layout_height="56dp"
        android:layout_marginTop="28dp"
        android:fontFamily="serif"
        android:text="ECOPONTOS"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="312dp"
        android:layout_height="483dp"
        android:layout_marginTop="8dp"
        android:background="#9990BBA2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints"
        tools:srcCompat="#9990BBA2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="308dp"
        android:layout_height="85dp"
        android:layout_marginTop="32dp"
        android:background="#9990BBA2"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="54dp"
        tools:srcCompat="#9990BBA2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="285dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="Canasvieiras: Rua Afonso Cardoso da Veita, s/n.  - Segunda a sexta, das 7h às 19h. (48) 3266 1445"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="286dp"
        android:layout_height="73dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="Monte Cristo: Rua Joaquim Nabuco, 2948.  - Segunda a sexta, das 7h às 19h e sábados das 7h às 16h. "
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="284dp"
        android:layout_height="73dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="Itacorubi: Rodovia Admar Gonzaga, 72.  - Todos os dias das 7h às 19h. (48)3261-4916 "
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="287dp"
        android:layout_height="66dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="Capoeiras: Rua Professor Egídio Ferreira, s/n.  - Todos os dias, das 7h às 19h"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="288dp"
        android:layout_height="142dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text=" Todos os dias das 7h às 19h. (48)3261-4916 Capoeiras: Rua Professor Egídio Ferreira, s/n.  - Todos os dias, das 7h às 19h. Morro das Pedras: Rua Francisco Vieira, 198.  - Segunda a sexta, das 7h às 19h. (48) 3338 4506"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="281dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:text="Existe um projeto de ampliar para 13 Ecopontos em Floripa. "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button3"
            android:layout_width="172dp"
            android:layout_height="43dp"
            android:layout_marginTop="4dp"
            android:onClick="proximo"
            android:text="próximo"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="210dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>